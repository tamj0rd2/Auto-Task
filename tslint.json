{
  "extends": ["tslint:latest", "tslint-config-prettier"],
  "rules": {
    "no-string-throw": true,
    "no-unused-expression": true,
    "no-duplicate-variable": true,
    "curly": true,
    "class-name": true,
    "triple-equals": true,
    "no-implicit-dependencies": false
  },
  "defaultSeverity": "error"
}
